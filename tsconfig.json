{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2022",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "es2021"
    ],
    "allowJs": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./types",
      "../node_modules/@types",
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "include": [
    "svg.d.ts",
    "../api//",
    "../api",
    "../api/**/*",
    "src/**/*.tsx",
    "**/*",
    "*"
  ],
  "exclude": [
    "**/node_modules",
    "node_modules",
    ".next",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist"
  ]
}
